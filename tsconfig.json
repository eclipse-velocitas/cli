{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "importHelpers": true,
        "module": "NodeNext",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "target": "ES2022",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "moduleResolution": "NodeNext"
    },
    "include": ["src/**/*"]
}
