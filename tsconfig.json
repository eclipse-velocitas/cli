{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "importHelpers": true,
        "module": "Node16",
        "moduleResolution": "node16",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "target": "es2022",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "ts-node": {
        "esm": true
    },
    "include": ["./src/**/*"]
}
