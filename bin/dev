#!/usr/bin/env node

const fs = require('fs');
const VELOCITAS_CONFIG = '.velocitas.json';
if (!fs.existsSync(VELOCITAS_CONFIG)) {
    console.log(`No ${VELOCITAS_CONFIG} found in current working directory. Change directory to 'vehicle-app-repo'.`);
    process.exit(1);
}

(async () => {
    const oclif = await import('@oclif/core');
    await oclif.execute({ type: 'cjs', development: true, dir: __dirname });
})();
