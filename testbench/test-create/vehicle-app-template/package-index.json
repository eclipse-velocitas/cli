[
    {
        "package": "https://github.com/eclipse-velocitas/vehicle-app-python-sdk",
        "components": [
            {
                "id": "vehicle-app-python-sdk",
                "type": "core",
                "description": "Python-based Velocitas Vehicle App",
                "parameters": [
                    {
                        "id": "example",
                        "description": "Available examples",
                        "type": "choice",
                        "required": false,
                        "values": [
                            "seat-adjuster",
                            "dog-mode"
                        ]
                    }
                ]
            }
        ]
    },
    {
        "package": "https://github.com/eclipse-velocitas/vehicle-app-cpp-sdk",
        "components": [
            {
                "id": "velocitas-app-cpp-core",
                "type": "core",
                "description": "C++-based Velocitas Vehicle App",
                "parameters": [
                    {
                        "id": "example",
                        "description": "Available examples",
                        "type": "choice",
                        "required": false,
                        "values": [
                            "seat-adjuster"
                        ]
                    }
                ]
            }
        ]
    },
    {
        "package": "https://github.com/eclipse-velocitas/devenv-devcontainer-setup.git",
        "components": [
            {
                "id": "vehicle-signal-interface",
                "type": "extension",
                "target": "runtime",
                "description": "Vehicle Signal Interface based on VSS and KUKSA Databroker",
                "supportedCores": [
                    "vehicle-app-python-sdk",
                    "vehicle-app-cpp-sdk"
                ],
                "parameters": [
                    {
                        "id": "src",
                        "description": "URI or path to VSS json (Leave empty for default: v3.0)",
                        "default": "https://github.com/COVESA/vehicle_signal_specification/releases/download/v3.0/vss_rel_3.0.json",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "id": "datapoints",
                        "description": "Datapoints to be used in your Vehicle Application",
                        "default": "{\"required\":[{\"path\":\"\",\"access\":\"\"}]}",
                        "required": false,
                        "type": "object"
                    }
                ]
            },
            {
                "id": "grpc-interface",
                "type": "extension", # possible types: "core",
                "extension""target": "manifest", # where does the information go? manifest -> "AppManifest.json" / "devenv" -> ".velocitas.json""description": "gRPC service contract based on a proto interface description",
                "supportedCores": [ # which core IDs are supported by this component?
                    "vehicle-app-python-sdk",
                    "vehicle-app-cpp-sdk"
                ],
                "parameters": [
                    {
                        "id": "src",
                        "description": "URI to the proto file which acts as the service interface",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "id": "required",
                        "description": "Configuration for the \"Client\" of the service. (Leave empty for now)",
                        "required": false,
                        "default": "{}",
                        "type": "object"
                    },
                    {
                        "id": "provided",
                        "prompt": "Configuration for the \"Provider\" of the service. (Leave empty for now)",
                        "required": false,
                        "default": "{}",
                        "type": "object"
                    }
                ]
            }
        ]
    },
    {
        "package": "https://github.com/eclipse-velocitas/devenv-runtimes.git",
        "components": [
            {
                "id": "runtime-local",
                "type": "extension",
                "target": "devenv",
                "description": "A runtime environment for local execution of an application and required services.",
                "supportedCores": [
                    "vehicle-app-python-sdk",
                    "vehicle-app-cpp-sdk"
                ]
            },
            {
                "id": "runtime-kanto",
                "type": "extension",
                "target": "devenv",
                "description": "A kanto-based runtime environment for execution of an application and required services with conditions closed to the LEDA distribution.",
                "supportedCores": [
                    "vehicle-app-python-sdk",
                    "vehicle-app-cpp-sdk"
                ]
            },
            {
                "id": "runtime-k3d",
                "type": "extension",
                "target": "devenv",
                "description": "A kubernetes-based runtime environment for execution of an application and required services.",
                "supportedCores": [
                    "vehicle-app-python-sdk",
                    "vehicle-app-cpp-sdk"
                ]
            }
        ]
    },
    {
        "package": "https://github.com/eclipse-velocitas/devenv-github-templates.git",
        "components": [
            {
                "id": "github-templates",
                "type": "extension",
                "target": "devenv",
                "description": "Issue and bug templates for vehicle application repositories.",
                "supportedCores": [
                    "vehicle-app-python-sdk",
                    "vehicle-app-cpp-sdk"
                ]
            }
        ]
    },
    {
        "package": "https://github.com/eclipse-velocitas/devenv-github-workflows.git",
        "components": [
            {
                "type": "extension",
                "id": "github-workflows",
                "group": "devenv",
                "description": "CI workflows for SCA, building and verifying vehicle applications.",
                "supportedCores": [
                    "vehicle-app-python-sdk",
                    "vehicle-app-cpp-sdk"
                ]
            }
        ]
    }
]
